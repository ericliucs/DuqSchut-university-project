@using DuqSchut.Models
@inject NavigationManager Navigation

<!-- This is code written by others and modified to a shared format 
  -- based on what [Caylah] learned from the SharedIndex file
  -- with very minor edits from ChatGPT's suggestions for improvement -->

@if (appointment is null)
{
    <p><em>Loading...</em></p>
}
else 
{
    <dl class="row">
        <dt class="col-sm-2">TuteeID</dt>
        <dd class="col-sm-10">@appointment.TuteeID</dd>

        <dt class="col-sm-2">TutorID</dt>
        <dd class="col-sm-10">@appointment.TutorID</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@appointment.Date</dd>

        <dt class="col-sm-2">StartTime</dt>
        <dd class="col-sm-10">@appointment.StartTime</dd>

        <dt class="col-sm-2">EndTime</dt>
        <dd class="col-sm-10">@appointment.EndTime</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@appointment.Location</dd>

        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@appointment.Course</dd>

        <dt class="col-sm-2">Purpose</dt>
        <dd class="col-sm-10">@appointment.Purpose</dd>

        <dt class="col-sm-2">Term</dt>
        <dd class="col-sm-10">@appointment.TermID</dd>
    </dl>
    <div>
        @if (CanEdit) 
        {
            <span> 
                <a href="@($"{EditRoute}?id={appointment.ID}")">Edit</a> |
            </span> 
        }
        @if (!string.IsNullOrEmpty(ContactRoute))
        {
            <span> 
                <a href="@($"{ContactRoute}?id={appointment.ID}")">Contact Student</a> |
                <a href="@($"{ListRoute}")">Back to List</a>
            </span> 
        }
    </div>
}

@code {
    #nullable enable
    [Parameter] public Appointment? appointment { get; set; }
    #nullable disable
    [Parameter] public string EditRoute { get; set; } = "";
    [Parameter] public string ContactRoute { get; set; } = "";
    [Parameter] public string ListRoute { get; set; } = "/";
    [Parameter] public bool CanEdit { get; set; } = false;
}